# Database Connection (Required)
# Use a cloud database (e.g., Neon, Vercel Postgres, Supabase) for Vercel deployment.
# Localhost URLs will NOT work on Vercel.
DATABASE_URL="postgresql://user:password@host:5432/kapdafactory?schema=public&sslmode=require"

# Authentication Secrets (Required)
# Generate a strong random string (e.g., `openssl rand -base64 32`)
AUTH_SECRET="your-secure-random-secret-key"
JWT_SECRET="your-secure-random-secret-key"
NEXTAUTH_SECRET="your-secure-random-secret-key"

# App URL (Optional but recommended)
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# Timezone (Optional)
TZ="Asia/Kolkata"
